programa {
  funcao inicio() {
    cadeia nome
    real nota1
    real nota2
    real media 

    escreva("Digite o nome do aluno: ")
    leia(nome)
    escreva("Digite a primeira nota: ")
    leia(nota1)
    escreva("Digite a segunda nota: ")
    leia(nota2)
    
   
    


    // Calcula a média
    media (nota1 + nota2) / 2
    // Exiba o resultado
    escreva("Aluno: ")
    escreva("Média final: media")
  }
}
